<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.windman.hellocustomview.blogs.ZhangHongYang.sticky_recyerview.StickyRecyclerViewActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="本demo作者：陈鹏飞 \n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="本demo介绍：https://juejin.im/post/5a70139ff265da3e274574cb \n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="本demo托管：https://github.com/chenpengfei88/StickyItemDecoration.git" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Hello World!" />
</LinearLayout>

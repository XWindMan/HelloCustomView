<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:windman="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/showDialog"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="弹出照片选择" />

            <Button
                android:id="@+id/showExpand"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="折叠列表" />

            <Button
                android:layout_margin="10dp"
                android:id="@+id/to_movelist"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="横向移动" />

            <Button
                android:id="@+id/to_roatelayout"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="翻转布局" />

            <Button
                android:id="@+id/to_privatepolicy"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="隐私条款" />

            <Button
                android:id="@+id/to_paintview"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="手绘" />

            <Button
                android:id="@+id/to_editdialog"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="编辑弹框" />

            <Button
                android:id="@+id/to_shader"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Shader" />

            <Button
                android:id="@+id/to_location"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="获取城市" />

            <Button
                android:id="@+id/to_expand_fragment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="折叠fragment" />

            <Button
                android:id="@+id/to_circleseekbar"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="To Circle Seekbar" />
            <Button
                android:id="@+id/to_stickyview"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="粘性recyblerview" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:windman="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/showDialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="弹出照片选择" />

    <Button
        android:id="@+id/showExpand"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="折叠列表" />

    <Button
        android:id="@+id/to_movelist"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="横向移动" />

    <Button
        android:id="@+id/to_roatelayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="翻转布局" />

    <Button
        android:id="@+id/to_privatepolicy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="隐私条款" />

    <Button
        android:id="@+id/to_paintview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="手绘" />

    <Button
        android:id="@+id/to_editdialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="编辑弹框" />

    <Button
        android:id="@+id/to_shader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Shader" />
</LinearLayout>
